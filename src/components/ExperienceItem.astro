---
import type { Tag } from "../types/Tag";
interface Props {
  title: string;
  company: string;
  description: string;
  date: string;
  tags: Tag[];
}

const { title, company, description, date, tags } = Astro.props;
---

<div
  class="relative mx-12 pb-12 flex flex-col before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-white/20 dark:before:border-white/15"
>
  <div class="relative pb-4 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-blue-400 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >
      <h3 class="text-xl font-bold text-blue-400">{title}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">
        {company}
      </h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80"
        >{date}</time
      >
    </div>
  </div>
  <div
    class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300"
  >
    {description}

    <ul class="flex flex-wrap gap-x-2 mb-2">
      {
        tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full mt-0.5 text-xs ${tag.class} py-1 px-2 text-white`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
