---
import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import LinkedinIcon from "../components/icons/Linkedin.astro";
import MailIcon from "../components/icons/Mail.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Portfolio de Juanma Moreno - Desarrollador y Programador Web con 4 años de experiencia"
  description="Contrata a Juanma Moreno para desarrollar tus proyectos web y más. Podrás conseguir una experiencia de desarrollo web de alta calidad y un trabajo de calidad único."
/>
<main>
  <SectionContainer>
    <img
      class="rounded-full size-12 mb-4"
      src="https://media.licdn.com/dms/image/D4E03AQEYFCc4xle9IQ/profile-displayphoto-shrink_200_200/0/1664378929084?e=1727308800&v=beta&t=-pRjASAcqKjp57krzHKgzmwkGA2cKCExEJYeC715Co8"
      alt="juanma photo"
    />
    <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
      Hola, soy Juanma Moreno
      <a
        href="https://www.linkedin.com/in/juanmanuelmorenogarrido"
        target="_blank"
        rel="noopener"
        class="flex justify-center items-center"
        ><Badge>Full Stack Developer</Badge></a
      >
    </h1>
    <h2 class="text-2xl text-wrap">
      <span>4 años de experiencia</span>
      <span class="text-yellow-500/90">Desarrollador web</span>.
      <span class="text-blue-200/90">De Bornos, Cádiz.</span>
      <span class="opacity-75">Fácil adaptabilidad a nuevas tecnologías.</span>
    </h2>
    <nav class="flex gap-x-4 mt-8">
      <SocialPill href="https://www.linkedin.com/in/juanmanuelmorenogarrido">
        <LinkedinIcon class="size-12" />LinkedIn
      </SocialPill>
      <SocialPill href="https://github.com/jmorgar">
        <GitHubIcon class="size-12" />GitHub
      </SocialPill>
      <SocialPill href="https://github.com/jmorgar">
        <MailIcon class="size-12" />juanmamorenogarrido@gmail.com
      </SocialPill>
    </nav>
  </SectionContainer>

  <SectionContainer>
    <Experience />
  </SectionContainer>
</main>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
